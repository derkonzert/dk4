{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "mdx.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "cypress/integration/1-getting-started/home.spec.js"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}